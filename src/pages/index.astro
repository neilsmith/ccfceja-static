---
import Layout from '../layouts/Layout.astro';

import { Image } from '@astrojs/image/components';
import stadium from '../images/pexels-markus-spiske-114296.jpg';

---

<Layout title="Chelmsford City FC EJA">
  <!-- Breadcrumbs Section Start -->
  <div class="rs-breadcrumbs">
      <div class="breadcrumbs-wrap">
          <Image src={ stadium } width={1000} height={142} fit="cover" position="south" alt="Chelmsford City FC Logo" />
          <div class="breadcrumbs-inner">
              <div class="container">
                  <div class="breadcrumbs-text">
                      <!-- <h1 class="breadcrumbs-title mb-17">About</h1> -->
                      <div class="categories">
                          <ul>
                              <li><a href="/">Home</a></li>
                              <!-- <li class="active">About</li> -->
                          </ul>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <!-- Breadcrumbs Section End -->

  <!-- About Section Start -->
  <div class="rs-about pt-100 pb-100 md-pt-80 md-pb-73">
      <div class="container">
          <div class="row align-items-center">
              <div class="col-lg-12 pl-40 col-padding-md">
                  <div class="title-style mb-50 md-mb-30">
                      <h2 class="margin-0 uppercase">Chelmsford City FC EJA</h2>
                      <span class="line-bg y-b left-line pt-10"></span>
                  </div>
                  <div class="about-wrap">
                      <p class="title-color">Website coming soon.</p>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <!-- About Section End -->

</Layout>
